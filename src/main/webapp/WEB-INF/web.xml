<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    
   
    <servlet>
        <servlet-name>departmentServlet</servlet-name>
        <servlet-class>com.rulez.controller.DepartmentController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>departmentServlet</servlet-name>
        <url-pattern>/departments</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>staffServlet</servlet-name>
        <servlet-class>com.rulez.controller.StaffController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>staffServlet</servlet-name>
        <url-pattern>/staff</url-pattern>
    </servlet-mapping>



    <display-name>Archetype Created Web Application</display-name>

</web-app>
